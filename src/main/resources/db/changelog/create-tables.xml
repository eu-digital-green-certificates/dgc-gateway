<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1618415880467-1" author="f11h">
        <createTable tableName="signer_information">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SIGNER_INFORMATION"/>
            </column>
            <column name="kid" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp_created" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="timestamp_updated" type="DATETIME"/>
            <column name="information_object" type="BLOB">
                <constraints nullable="false"/>
            </column>
            <column name="revoked" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="owner" type="VARCHAR(64)"/>
            <column name="version" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1618415880467-2" author="f11h">
        <createTable tableName="trusted_party">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_TRUSTED_PARTY"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="VARCHAR(2)">
                <constraints nullable="false"/>
            </column>
            <column name="thumbprint" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="certificate_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="raw_data" type="VARCHAR(4096)">
                <constraints nullable="false"/>
            </column>
            <column name="signature" type="VARCHAR(1000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>